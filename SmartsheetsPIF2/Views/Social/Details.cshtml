            </dd>
        </div>
    </div>
    <div class="col-12 col-md-6 details-col-2">
        <div class="row">
            <dt class="col-sm-3">PM</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.pm)</dd>
        </div>
        <div class="row">

            <dt class="col-sm-3">Producer</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.producer)</dd>
        </div>
        <div class="row">
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.status)</dd>
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.type)</dd>
        </div>

    </div>
</div>
