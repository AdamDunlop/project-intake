@model Smartsheetsproject.Models.SocialModel

@{
    ViewData["Title"] = "Project Details";
}

<div class="row">
    <div class="col-12">
        <h2 class="header-title">@Html.DisplayFor(model => model.projectName) Details</h2>
        <hr />

    </div>
</div>
<div class="row" style="margin: auto">
    <div class="col-12 col-md-6 details">
        <div class="row">
            <dt class="col-sm-3">Project</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.projectName)</dd>
        </div>
        <div class="row">
            <dt class="col-sm-3">LOB</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.lob)</dd>
        </div>
