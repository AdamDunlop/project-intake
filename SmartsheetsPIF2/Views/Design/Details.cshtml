@model Smartsheetsproject.Models.DesignModel

@{
    ViewData["Title"] = "Design Details";
}

<div class="row">
    <div class="col-12">
        <h2 class="header-title">@Html.DisplayFor(model => model.projectName) Details</h2>
        <hr />

    </div>
</div>
<div class="row" style="margin: auto">
    <div class="col-12 col-md-6 details">
        <div class="row">
            <dt class="col-sm-3">Project</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.projectName)</dd>
        </div>
        <div class="row">
            <dt class="col-sm-3">LOB</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.lob)</dd>
        </div>
        <div class="row">
            <dt class="col-sm-3">Tenrox</dt>
            @if (Model.tenrox != null)
            {
                <dd class="col-sm-9">@Html.DisplayFor(model => model.tenrox)</dd>
            }
            else
            {
                <dd class="alert alert-warning" role="alert">No Tenrox Code Provided.</dd>
            }
        </div>
       
      

        <div class="row">
            <dt class="col-sm-3">Designer</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.assignedTo)</dd>
        </div>

    </div>
    <div class="col-12 col-md-6 details-col-2">
        <div class="row">
            <dt class="col-sm-3">Status</dt>


            @if (Model.status != null)
            {
                <dd class="col-sm-9">@Html.DisplayFor(model => model.status)</dd>
            }
            else
            {
                <dd class="alert alert-warning" role="alert">Status unavailable</dd>
            }

        </div>


        <div class="row">
            <dt class="col-sm-3">Timing</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.startDate) -
                @Html.DisplayFor(model => model.dueDate)
            </dd>
        </div>


        <div class="row">
            <dt class="col-sm-3">AM</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.am)</dd>
        </div>


        <div class="row">
            <dt class="col-sm-3">PM</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.pm)</dd>
        </div>
    </div>
    <div class="col-12 wbs-section">
        <hr />
        <h5>WBS</h5>
        <label>
            <input type="checkbox" name="checkbox" value="wbs"> Expand
        </label>
        <div class="wbs toggle">
            @if (Model.wbs != null)
            {
                <IFRAME WIDTH="100%" HEIGHT=450 FRAMEBORDER=0 SRC="@Model.wbs"></IFRAME>

            }
            else
            {
                <div class="alert alert-warning" role="alert">No WBS provided.</div>
            }
        </div>
    </div>

    <hr />



    <div class="col-12">
       
        <label>
            <h5>Box</h5>
            @*<input type="checkbox" name="checkbox" value="box"> Expand*@
        </label>
        <div class="box ">
        @if (Model.box != null)
        {
            <iframe src="@Model.box" width="100%" height="450" frameborder="0" allowfullscreen webkitallowfullscreen msallowfullscreen></iframe>
        }
        else
        {
            <div class="alert alert-warning" role="alert">No Box link provided.</div>

        }
            </div>
    </div>

<hr />

<div class="col-12 col-md-6 details">

    <div class="row">
        <a asp-action="List" class="btn back">
            <i class="bi bi-arrow-bar-left"></i>
            <span>Back to List</span>
        </a>
    </div>
</div>


</div>