@model Smartsheetsproject.Models.DesignModel

@{
    ViewData["Title"] = "Edit";

}

<div class="row">

    <div class="col-12">
        @if (Model.projectName != null)
        {
            <h2 class="header-title">project - @Html.DisplayFor(m => m.projectName)</h2>
        }
        else
        {
            <h2 class="header-title">project</h2>
        }
        <hr />
    </div>
</div>


@using (Html.BeginForm("Edit", "Design", FormMethod.Post, new { @class = "form-group row" }))
{
<div class="col-12 col-md-6">
    @Html.HiddenFor(m => m.pipelineId)


    <div class="form-group">
        <label asp-for="projectName" class="control-label">Project Name</label>
        @Html.TextBoxFor(m => m.projectName, new { @class = "form-control" })
        <span asp-validation-for="projectName" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="lob" class="control-label">Line of Business</label>
        @Html.DropDownListFor(m => m.lob, Model.lob_options, new { @class = "form-control" })
        @Html.HiddenFor(m => m.lob)
        @Html.HiddenFor(m => m.lob_options)
        <span asp-validation-for="lob_options" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="tenrox" class="control-label">Tenrox Codes</label>
        @Html.TextBoxFor(m => m.tenrox, new { @class = "form-control" })
        <span asp-validation-for="tenrox" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="status" class="control-label">Status</label>
        @Html.DropDownListFor(m => m.status, Model.status_options, new { @class = "form-control" })
        @Html.HiddenFor(m => m.status)
        @Html.HiddenFor(m => m.status_options)
        <span asp-validation-for="status_options" class="text-danger"></span>
    </div>

</div>

