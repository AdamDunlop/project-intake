@model Smartsheetsproject.Models.TechModel

@{
    ViewData["Title"] = "Edit";

}

<div class="row">

    <div class="col-12">
        @*<h1>Edit</h1>*@

        @if (Model.projectName != null)

        {
            <h2 class="header-title">project - @Html.DisplayFor(m => m.projectName)</h2>
        }
        else
        {
            <h2 class="header-title">project</h2>
        }
        <hr />
    </div>
</div>


@using (Html.BeginForm("Edit", "Display", FormMethod.Post, new { @class = "form-group row" }))
{
    <div class="col-12 col-md-6">
        @Html.HiddenFor(m => m.pipelineId)


        <div class="form-group">

            <label asp-for="lob" class="control-label">LOB</label>
            @Html.DropDownListFor(m => m.lob, Model.lob_options, new { @class = "form-control" })
            @Html.HiddenFor(m => m.lob)
            @Html.HiddenFor(m => m.lob_options)
            <span asp-validation-for="lob_options" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="status" class="control-label">Status</label>
            @Html.DropDownListFor(m => m.status, Model.status_options, new { @class = "form-control" })
            @Html.HiddenFor(m => m.status)
            @Html.HiddenFor(m => m.status_options)
            <span asp-validation-for="status_options" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="wbs" class="control-label">WBS</label>
            @Html.TextBoxFor(m => m.wbs, new { @class = "form-control" })
            <span asp-validation-for="wbs" class="text-danger"></span>
        </div>

        @*<div class="form-group">
                <label asp-for="SelectedSpecs" class="control-label">Specs/Resizes</label>
                @Html.ListBoxFor(m => m.SelectedSpecs, new MultiSelectList(Model.SpecsList, "Value", "Text", Model.SelectedSpecs), new { @class = " form-control chosen-select" })
                @Html.HiddenFor(m => m.SelectedSpecs)
                @Html.HiddenFor(m => m.SpecsList)
            </div>*@


    </div>

    <div class="col-12 col-md-6">

        <div class="form-group project-dates">

            <label asp-for="techStart" class="control-label edit-date">Start Date</label>
            <div class="date-dropdown">
                @Html.TextBoxFor(m => m.techStart, "{0:MM/dd/yyyy}", new { @class = "form-control", @id = "startdatepicker" })
            </div>
            <span asp-validation-for="techStart" class="text-danger"></span>
        </div>
        <div class="form-group project-dates">
            <label asp-for="techDue" class="control-label edit-date">Due Date</label>
            <div class="date-dropdown">
                @Html.TextBoxFor(m => m.techDue, "{0:MM/dd/yyyy}", new { @class = "form-control", @id = "duedatepicker" })
            </div>
            <span asp-validation-for="techDue" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="assignedTo" class="control-label">Assigned To:</label>
            @Html.TextBoxFor(m => m.assignedTo, new { @class = "form-control" })
            @*<span asp-validation-for="assignedTo" class="text-danger"></span>*@
        </div>

        @*<div class="form-group">
                <label asp-for="box" class="control-label">Box</label>
                @Html.TextBoxFor(m => m.box, new { @class = "form-control" })
                <span asp-validation-for="box" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="FxF" class="control-label">FxF</label>
                @Html.TextBoxFor(m => m.FxF, new { @class = "form-control" })
                <span asp-validation-for="FxF" class="text-danger"></span>
            </div>*@


        @*<div class="form-group">
                <label asp-for="PSDs" class="control-label">PSDs</label>
                @Html.TextBoxFor(m => m.PSDs, new { @class = "form-control" })
                <span asp-validation-for="PSDs" class="text-danger"></span>
            </div>*@



    </div>

    <div class="col-12 col-md-12 form-actions">


        <div class="form-group">
            <input type="submit" asp-action="Edit" value="Save" class="btn btn-info float-left" />
        </div>
        <div class="back">
            <a asp-action="List" class="btn btn-secondary">
                <span>Back to List</span>
                <i class="bi bi-arrow-bar-right"></i>

            </a>
        </div>
    </div>

}

